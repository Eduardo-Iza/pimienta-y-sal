<!DOCTYPE html>
<html>
  <!-- Head -->
    <!-- views/partials/head.ejs -->
    <%- include('./partials/head') %>

  <body>
    <!-- Navbar (sit on top) -->
      <!-- views/partials/navbar.ejs -->
      <%- include('./partials/navbar') %>
   
    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Men√∫</h1>
          <br />

          <% for (i=0; i<platos.length; i++){ %>

            <h4><a href="/detail/<%= i %>"><%= platos[i].nomPlato %></a></h4>
            <p class="ps-text-grey">
              <%= platos[i].descPlato %> <%= platos[i].precio %>
            </p>
            <br />

          <% } %>
        </div>
        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>
      <!-- Footer -->
      <!-- views/partials/footer.ejs -->
      <%- include('./partials/footer') %>

    </div>
  </body>
</html>
